#!/bin/bash

# Get the directory of the script
SCRIPT_DIR="$(dirname "$(realpath "$0")")"

# Set the path to your git repository from parent folder
REPO_PATH="$(dirname "$SCRIPT_DIR")"

# Navigate to the repository directory
cd "$REPO_PATH" || {
  echo "Repository path not found"
  exit 1
}

# parse and export .env file (dotenv)
if [ -f ".env" ]; then
  # Export the vars in .env into your shell:
  export $(egrep -v '^#' .env | xargs)
fi

ORIGIN="https://dimaslanjaka:$ACCESS_TOKEN@github.com/dimaslanjaka/php-proxy-hunter"
PRIVATE="https://dimaslanjaka:$ACCESS_TOKEN@github.com/dimaslanjaka/traffic-generator"

echo "Generated remote origin: $ORIGIN"
echo "Generated remote private: $PRIVATE"

git remote add origin $ORIGIN || true
git remote set-url origin $ORIGIN || true
git remote add python $PRIVATE || true
git remote set-url python $PRIVATE || true
git remote add private $PRIVATE || true
git remote set-url private $PRIVATE || true

if [[ "$OSTYPE" == "cygwin" || "$OSTYPE" == "msys" || $OSTYPE == mingw* ]]; then
  echo "Permission not applied on windows"
else
  chmod +x bin/*
  chmod +x vendor/bin/*
  chmod +x node_modules/.bin/*
  chmod +x venv/bin/*
  chmod +x *.sh
  find vendor/bin -type f -exec chmod +x {} +
  find node_modules/.bin -type f -exec chmod +x {} +
  find venv/bin -type f -exec chmod +x {} +
fi
