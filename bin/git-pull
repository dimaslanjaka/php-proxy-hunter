#!/bin/bash

# Get the directory of the script
SCRIPT_DIR="$(dirname "$(realpath "$0")")"

# Set the path to your git repository from parent folder
CWD="$(dirname "$SCRIPT_DIR")"

# Navigate to the repository directory
cd "$CWD" || {
  echo "Repository path not found"
  exit 1
}

# Execute git pull with provided arguments
git pull "$@"

# Check if the git pull was successful
if [ $? -eq 0 ]; then
  echo "Git pull completed successfully."
else
  echo "Git pull failed."
fi

# Check for CRON_TZ environment variable
if [ -n "$CRON_TZ" ]; then
  echo "Script is running under crontab"
else
  echo "Script is not running under crontab"

  # Fix permissions all *.sh scripts
  chmod +x *.sh

  # Execute all fix-*.sh scripts
  for file in fix-*.sh; do
    if [ -x "$file" ]; then
      bash "$file"
    else
      echo "Skipping $file: Not executable"
    fi
  done
fi

# Fix .husky/hash.txt (modified, staged, or untracked)
if git status --porcelain .husky/hash.txt | grep -qE '^( M|M |A |??)'; then
  echo "Detected changes in .husky/hash.txt"

  # Truncate the file
  : > .husky/hash.txt

  # Add it to the index
  git add .husky/hash.txt

  echo ".husky/hash.txt has been truncated and staged."
else
  echo ".husky/hash.txt is clean. No action needed."
fi

# Fix permissions
bash "$CWD/bin/fix-perm"
