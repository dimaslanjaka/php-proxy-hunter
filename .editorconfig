# EditorConfig — optimized for a polyglot repository
# https://editorconfig.org

root = true

# ---------- Default (applies to all files) ----------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 120

# ---------- Language-specific overrides ----------

# Python: 4 spaces, PEP8-compatible line length
[*.py]
indent_size = 4
tab_width = 4
max_line_length = 119

# PHP (common projects use 4 spaces)
[*.php]
indent_size = 4
tab_width = 4

# JavaScript / TypeScript / JSON / HTML / CSS — 2 spaces
[*.{js,ts,jsx,tsx,json,html,css,scss,vue}]
indent_size = 2
tab_width = 2

# YAML
[*.{yml,yaml}]
indent_size = 2
tab_width = 2

# Markdown: preserve trailing whitespace (used for hard line breaks)
[*.md]
trim_trailing_whitespace = false

# Makefiles use tabs
[Makefile]
indent_style = tab
trim_trailing_whitespace = false

# Windows batch files use CRLF and keep trailing whitespace
[*.{bat,cmd}]
end_of_line = crlf
trim_trailing_whitespace = false

# Minified and generated files: avoid editing them
[**.min.{js,css}]
trim_trailing_whitespace = false
insert_final_newline = false

# Avoid modifying files in common vendor/build directories
[**/{vendor,tmp,node_modules,dist,build}/**]
trim_trailing_whitespace = false
insert_final_newline = false

# Shell scripts: use 2 spaces (project-specific choice)
[*.{sh,bash}]
indent_size = 2
tab_width = 2
end_of_line = lf

# --------- End of file ---------

