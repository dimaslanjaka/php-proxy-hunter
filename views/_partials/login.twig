<div class="h-full sm:h-screen flex items-center justify-center">
  <div class="w-full max-w-md p-6 bg-white dark:bg-gray-900 rounded-lg shadow-lg">
    <h2 class="text-2xl font-semibold text-center text-gray-800 dark:text-gray-100 mb-6">{{ 'welcome_back' | trans | title }}</h2>
    <form class="space-y-4" id="login-form">
      <div>
        <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Username or email</label>
        <input type="text" id="username" name="username" required class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm bg-gray-50 dark:bg-gray-700 dark:text-gray-100">
      </div>
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
        <input type="password" id="password" name="password" required class="mt-1 block w-full rounded-md border-gray-300 dark:border-gray-700 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm bg-gray-50 dark:bg-gray-700 dark:text-gray-100">
      </div>
      <div class="text-right">
        <a href="#" class="text-sm text-indigo-600 dark:text-indigo-400 hover:underline">Forgot password?</a>
      </div>
      <button type="submit" class="w-full py-2 px-4 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900">Login or Create Account</button>
    </form>
    <div class="mt-6 text-center">
      <p class="text-sm text-gray-600 dark:text-gray-400">Or login with</p>
      <div class="mt-4 flex justify-center space-x-4">
        <button class="flex items-center justify-center w-10 h-10 bg-blue-600 text-white rounded-full hover:bg-blue-700">
          <span class="sr-only">Login with Facebook</span>
          <i class="fab fa-facebook-f"></i>
        </button>
        <button class="flex items-center justify-center w-10 h-10 bg-gray-800 text-white rounded-full hover:bg-gray-900">
          <span class="sr-only">Login with GitHub</span>
          <i class="fab fa-github"></i>
        </button>
        <button class="flex items-center justify-center w-10 h-10 bg-red-500 text-white rounded-full hover:bg-red-600" id="google-login-btn">
          <span class="sr-only">Login with Google</span>
          <i class="fab fa-google"></i>
        </button>
      </div>
    </div>
  </div>
</div>
