{
  "terminal.integrated.env.linux": {
    "PATH": "${env:PATH}:${workspaceFolder}/node_modules/.bin:${workspaceFolder}/bin:${workspaceFolder}/vendor/bin"
  },
  "terminal.integrated.env.windows": {
    "PATH": "${env:PATH};${workspaceFolder}\\node_modules\\.bin;${workspaceFolder}\\bin;${workspaceFolder}\\vendor\\bin",
    "NUITKA_CACHE_DIR": "${workspaceFolder}\\tmp\\nuitka-cache"
  },
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Cygwin": {
      "path": "C:\\cygwin64\\bin\\bash.exe",
      "args": [
        "--login",
        "-i"
      ],
      "env": {
        "CHERE_INVOKING": "1"
      }
    }
  },
  "terminal.integrated.defaultProfile.windows": "Command Prompt",
  "files.autoSave": "onWindowChange",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "code-runner.clearPreviousOutput": true,
  "code-runner.ignoreSelection": true,
  "code-runner.runInTerminal": true,
  "code-runner.saveAllFilesBeforeRun": true,
  "code-runner.executorMapByGlob": {
    "electron-*.ts": "cross-env-shell NODE_ENV=development electron -r ts-node/register",
    "*.py": "python -u",
  },
  "code-runner.respectShebang": true,
  "debug.terminal.clearBeforeReusing": true,
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    },
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "autopep8.args": [
    "--ignore",
    "E401,E402,E211,E501"
  ],
  "intelephense.maxMemory": 1028,
  "intelephense.rename.exclude": [
    "**/vendor/**",
    "**/node_modules/**",
    "**/tmp/**",
    "**/dist/**",
    "**/.cache/**"
  ],
  "intelephense.references.exclude": [
    "**/vendor/**",
    "**/node_modules/**",
    "**/tmp/**",
    "**/dist/**",
    "**/.cache/**"
  ],
  "intelephense.trace.server": "messages",
  "intelephense.completion.maxItems": 100,
  "intelephense.diagnostics.run": "onSave",
  "intelephense.files.exclude": [
    "**/.DS_Store/**",
    "**/.cache/**",
    "**/.git/**",
    "**/.hg/**",
    "**/.history/**",
    "**/.idea/**",
    "**/.svn/**",
    "**/.yarn/**",
    "**/CVS/**",
    "**/Thumbs.db",
    "**/assets/**/*",
    "**/bower_components/**",
    "**/config/**/*",
    "**/dist/**",
    "**/node_modules/**",
    "**/tmp/**",
    "**/.venv/**",
    "**/venv/**",
    "**/assets/**",
    "**/*.sqlite"
  ],
  "intelephense.files.associations": [
    "*.php",
    "*.phtml"
  ],
  "intelephense.telemetry.enabled": true,
  "eslint.debug": true,
  "python.createEnvironment.contentButton": "show",
  "python.terminal.activateEnvInCurrentTerminal": true,
  "files.watcherExclude": {
    "**/.cache/**": true,
    "**/.idea/**": true,
    "**/.venv/**": true,
    "**/venv/**": true,
    "**/.yarn/**": true,
    "**/dist/**": true,
    "**/profiles/**": true,
    "**/tmp/**": true,
    "**/config/**": true,
    "**/databases/**": true,
    "**/node_modules/**": true,
    "src/database.sqlite*": true
  },
  "intelephense.environment.documentRoot": "${workspaceFolder}",
  "intelephense.environment.includePaths": [
    "${workspaceFolder}/src",
    "${workspaceFolder}/vendor"
  ],
  "files.exclude": {
    "**/.cache/**": true,
    "**/.idea/**": true,
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/dist": true,
    "**/tmp": true,
    "**/node_modules": true,
    // "**/vendor": true,
    "**/.venv": true,
    "**/venv": true,
    "**/config": true,
    "**/.yarn": true,
    "backups": true
  },
  "python.analysis.extraPaths": [
    "./packages/proxy-hunter-python",
    "./packages/proxy-checker-python"
  ],
  "python.analysis.exclude": [
    "**/node_modules",
    "**/__pycache__",
    "**/build",
    ".git",
    "venv/**",
    "**/bin",
    "**/vendor",
    "**/*.egg-info",
    "**/tmp/**",
    "**/dist",
    "**/backups"
  ],
  "eslint.useFlatConfig": false
}
