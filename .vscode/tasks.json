{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "runDevelopment",
      "runOptions": {
        "runOn": "folderOpen"
      },
      "dependsOrder": "parallel",
      "dependsOn": [
        "celery-beat",
        "celery-worker",
        "django-server"
      ]
    },
    {
      "label": "celery-worker",
      "type": "shell",
      "command": "celery -A django_backend worker --loglevel=info",
      "presentation": {
        "panel": "dedicated"
      }
    },
    {
      "label": "celery-beat",
      "type": "shell",
      "command": "celery -A django_backend beat --loglevel=info",
      "presentation": {
        "panel": "dedicated"
      }
    },
    {
      "label": "django-server",
      "type": "shell",
      "command": "python manage.py runserver",
      "presentation": {
        "panel": "dedicated"
      }
    }
  ]
}